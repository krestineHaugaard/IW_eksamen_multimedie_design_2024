---
import "../styles/global.css";
import NavBar from "./NavBar.astro";
---

<header>
    
    <section class="navigation_section">
        <NavBar/>
    </section>
    
</header>

<style>

    header{
        background: linear-gradient(var(--iw-color-orange), var(--iw-color-orange), var(--iw-color-cream));
        display:grid;
        grid-template-columns: 1fr 6fr 1fr;
    }

    .navigation_section{
        background-color: var(--iw-color-white);
        grid-column: 2;
        margin-block: 25px;
        padding: 25px;
        border-radius: 5px;
        box-shadow: -4px 2px 0px 8px var(--iw-color-blue);
    }


</style>