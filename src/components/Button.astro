---
import "../styles/global.css";
const btnlink = Astro.props.btnlink;
const btntext = Astro.props.btntext;
---

<a href={btnlink}>
{btntext}
</a>

<style>

a{
    background-color: var(--iw-color-blue);
        padding-block: 15px;
        padding-inline: 40px;
        border-radius: 3px;
        box-shadow: inset 4px 6px 0px var(--iw-color-white), 3px 2px 0px 7px var(--iw-color-orange);
        color: var(--iw-color-black);
        font-size: 20px;
        text-transform: uppercase;
        font-family: "Atma", system-ui;
        font-weight: 700;
        font-style: normal;
        text-shadow: 2px 2px var(--iw-color-orange);
        letter-spacing: 2px;
        text-decoration: none;   
        text-align: center;
}

a:hover{
    background-color: var(--iw-color-white);
    box-shadow: inset 4px 6px 0px var(--iw-color-blue), 3px 2px 0px 7px var(--iw-color-orange);
}

a:active{
    background-color: var(--iw-color-blue);
    box-shadow: inset 4px 6px 0px var(--iw-color-white), 3px 2px 0px 9px var(--iw-color-orange);
}
</style>