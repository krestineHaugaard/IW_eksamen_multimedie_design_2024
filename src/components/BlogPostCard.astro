---
import "../styles/global.css";
const blogLink = Astro.props.blogLink;
const blogImage = Astro.props.blogImage;
const imageAlt = Astro.props.imageAlt;
const blogDate = Astro.props.blogDate;
const headline = Astro.props.headline;
const text = Astro.props.text;
---

<a href={blogLink}>
    <article class="blog_card">
        <img src={blogImage} alt={imageAlt}>
        <div class="content">
            <p class="date">{blogDate}</p>
            <h3>{headline}</h3>
            <p class="text_content">{text}</p>
        </div>
    </article>
</a>

<style>

.blog_card{
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: var(--iw-color-white);
    border-radius: 10px;
    box-shadow: 5px 7px var(--iw-color-orange);
    overflow: hidden;
    gap:20px;
    margin-block: var(--space-2xl);
}

.blog_card:hover{
    box-shadow: 5px 7px var(--iw-color-blue);
}

.content{
    align-self: center;
    padding-right: 10px;
}
img{
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
}
.date{
    font-size: var(--text--1);
}

h3{
    margin-block: var(--space-s);
}

a{
    text-decoration: none;
}

@media (max-width: 800px) {
.text_content{
    display: none;
}

h3{
    font-size: var(--text-1);
    text-shadow: 1.5px 1px var(--iw-color-orange);
}

}

</style>