---
import "../styles/global.css";
import { Image } from "astro:assets";
import bigLogoDark from "../assets/big_logo_dark_text.svg";
import bigLogoLight from "../assets/big_logo_light_text.svg";
import kimFighting from "../assets/kim_fight_01.svg";
import maryFighting from "../assets/mary_fight_02.svg";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import HomePageSectionOrange from "../components/HomePageSectionOrange.astro";
import HomePageSectionBlue from "../components/HomePageSectionBlue.astro";
import trap2 from "../assets/trap2.svg";
import NewsSignUp from "../components/NewsSignUp.astro";
import gramps from "../assets/gramps_with_tv.svg";
---

<Layout title="Invisible Walls">
    <section>
        <Image src={kimFighting} alt="game character kim" class="kim"/>
        <div class="flex">
        <Image src={bigLogoDark} alt="Invisible Walls logo" class="big_logo_dark"/>
        <Image src={bigLogoLight} alt="Invisible Walls logo" class="big_logo_light"/>
        <p>
            Is the award winning studio behind First Class Trouble and Aporia: Beyond the Valley. Our focus is creating social strategy games, where social interaction is core to the experience - and games that are as fun to watch as they are to play.</p>
        <Button btnlink="/the_team" btntext="meet the team" />
        </div>
        <Image src={maryFighting} alt="game character mary" class="mary"/>
    </section>
    <HomePageSectionOrange/>
    <HomePageSectionBlue/>
    <section>
        <Image src={trap2} alt="game item" class="trap2"/>
        <div class="news">
            <h3>Sign up for our newsletter!</h3>
            <NewsSignUp/>
        </div>
        <Image src={gramps} alt="game character gramps watching news" class="gramps"/>
    </section>

</Layout>
<style>

    section{
        display: grid;
        grid-template-columns: repeat(10, 1fr);
        margin-top: -5%;
    }

    .flex{
        grid-column: 5/7;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-xl)
    }

    p{
        text-align: center;
        width: 65ch;
    }

    .kim{
        grid-column: 2/4;
        width: 120%;
    }

    .mary{
        grid-column: 8/10;
        grid-row: 2;
        margin-top: -80%;
        width: 110%;
    }

    .big_logo_light{
        display: none;
        
    }

    .trap2{
        grid-column: 1/4;
        margin-bottom: var(--space-xl);
    }

    .news{
        grid-column: 4/8;
        grid-row: 2;
        margin-block: var(--space-xl);
        text-align: center;
    }

    .gramps{
        grid-column: 6/11;
        grid-row: 3;
        margin-top: var(--space-xl);
    }

    :global(.dark) .big_logo_light{
        display: block;
    }

    :global(.dark) .big_logo_dark{
        display: none;
    }

    @media (max-width: 800px) {
  
        .trap2{
        grid-column: 1/5;
        margin-bottom: var(--space-xl);
    }

    .news{
        grid-column: 1/11;
        grid-row: 2;
        margin-block: var(--space-xl);
        text-align: center;
    }

    .gramps{
        grid-column: 5/11;
        grid-row: 3;
        margin-top: var(--space-xl);
    }

    }


</style>
